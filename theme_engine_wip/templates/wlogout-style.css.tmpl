* {
    font-family: CaskaydiaCove Nerd Font Mono, Symbols Nerd Font;
    font-size: 24px;
    transition-property: background-color;
    transition-duration: 0.7s;
}

window {
    background-color: #{{crust}};
}

button {
    background-color: #{{crust}};
    border-style: solid;
    border-radius: 50px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 15%;
    margin: 15px;
}

button:active,
button:hover {
    background-color: #{{text}};
}

button:focus {
    background-color: #{{text}};
}

#lock {
    background-image: image(url("/home/sincos/.config/wlogout/assets/lock.png"));
}

#lock:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/lock-hover.png"));
    color: #{{crust}};
}

#logout {
    background-image: image(url("/home/sincos/.config/wlogout/assets/logout.png"));
}

#logout:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/logout-hover.png"));
    color: #{{crust}};
}

#suspend {
    background-image: image(url("/home/sincos/.config/wlogout/assets/sleep.png"));
}

#suspend:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/sleep-hover.png"));
    color: #{{crust}};
}

#shutdown {
    background-image: image(url("/home/sincos/.config/wlogout/assets/power.png"));
}

#shutdown:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/power-hover.png"));
    color: #{{crust}};
}

#reboot {
    background-image: image(url("/home/sincos/.config/wlogout/assets/restart.png"));
}

#reboot:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/restart-hover.png"));
    color: #{{crust}};
}

#exit {
    background-image: image(url("/home/sincos/.config/wlogout/assets/restart.png"));
    background-color: #{{crust}};
}

#exit:hover {
    background-image: image(url("/home/sincos/.config/wlogout/assets/restart-hover.png"));
    color: #{{crust}};
    background-color: #{{text}};
}
